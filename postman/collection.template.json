{
  "info": {
    "name": "S2S Private Key JWT (Local/Prod)",
    "_postman_id": "s2s-demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "url": {
          "raw": "{{token_url}}",
          "host": [
            "{{token_url}}"
          ]
        },
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "grant_type",
              "value": "client_credentials"
            },
            {
              "key": "client_id",
              "value": "{{client_id}}"
            },
            {
              "key": "client_assertion_type",
              "value": "urn:ietf:params:oauth:client-assertion-type:jwt-bearer"
            },
            {
              "key": "client_assertion",
              "value": "{{client_assertion}}"
            }
          ]
        }
      }
    },
    {
      "name": "GET /api/hello",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/hello",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "hello"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://localhost:8443"
    },
    {
      "key": "token_url",
      "value": "{{base_url}}/kc/realms/api/protocol/openid-connect/token"
    },
    {
      "key": "client_id",
      "value": "api-client"
    },
    {
      "key": "client_assertion",
      "value": ""
    },
    {
      "key": "access_token",
      "value": ""
    }
  ]
}